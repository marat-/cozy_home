<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:layout_columnWeight="1"
  android:layout_gravity="fill"
  android:padding="9dip"
  android:background="@drawable/round_rect_shape"
  android:orientation="vertical">

  <com.google.android.flexbox.FlexboxLayout
    android:id="@+id/scnr_image_frame"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:orientation="horizontal"
    app:flexWrap="wrap"
    app:alignItems="flex_start"
    app:alignContent="flex_start"></com.google.android.flexbox.FlexboxLayout>

  <TextView
    android:id="@+id/scnr_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/scnr_image_frame"
    android:gravity="top"
    android:lines="3"
    android:textAppearance="@style/BoldGridTextAppearance" />

  <TextView
    android:id="@+id/scnr_description"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/scnr_name"
    android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>