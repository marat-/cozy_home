<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_gravity="center"
  android:padding="10dip">

  <ImageView
    android:id="@+id/cmd_controller_type_icon"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_marginRight="20dp"
    android:layout_centerVertical="true" />

  <TextView
    android:id="@+id/cmd_controller_name"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dip"
    android:layout_marginLeft="5dip"
    android:layout_toRightOf="@+id/cmd_controller_type_icon"
    android:padding="3dip"
    android:text="Controller name" />

  <TextView
    android:id="@+id/cmd_controller_ip_address"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dip"
    android:layout_below="@+id/cmd_controller_name"
    android:layout_toRightOf="@+id/cmd_controller_type_icon"
    android:padding="3dip"
    android:text="IP address" />

  <TextView
    android:id="@+id/cmd_controller_active"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dip"
    android:layout_below="@+id/cmd_controller_ip_address"
    android:layout_toRightOf="@+id/cmd_controller_type_icon"
    android:padding="2dip"
    android:text="Active"
    android:textColor="@android:color/darker_gray" />
</RelativeLayout>