<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:layout_columnWeight="1"
  android:layout_gravity="fill"
  android:padding="3dip"
  android:descendantFocusability="blocksDescendants"
  android:orientation="vertical">

  <ImageView
    android:id="@+id/controller_image"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true" />

  <TextView
    android:id="@+id/controller_name"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_marginLeft="20dp"
    android:layout_alignParentTop="true"
    android:layout_toRightOf="@+id/controller_image"
    android:ellipsize="marquee"
    android:marqueeRepeatLimit="marquee_forever"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:textColor="#505050" />

  <TextView
    android:id="@+id/controller_type_name"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_marginLeft="20dp"
    android:layout_below="@+id/controller_name"
    android:layout_toRightOf="@+id/controller_image"
    android:ellipsize="marquee"
    android:marqueeRepeatLimit="marquee_forever"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:textColor="#505050" />

  <TextView
    android:id="@+id/controller_ip_address"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_marginLeft="20dp"
    android:layout_below="@+id/controller_type_name"
    android:layout_toRightOf="@+id/controller_image"
    android:ellipsize="marquee"
    android:marqueeRepeatLimit="marquee_forever"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:textColor="@color/grey" />

</RelativeLayout>